{% extends 'base_connected.html.twig' %}

{% block title %} Friendlist {% endblock %}

{% block stylesheets %}
    <link href="{{ asset('css/friendlist.css') }}" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
{% endblock %}

{% block body %}


{% for label,flashes in app.session.flashbag.all %}
    {% for flash in flashes %}
        {% if (label == 'success' ) %}
            <div id="message">
                <div style="padding: 5px;">
                    <div id="inner-message" class="alert alert-success fade show" >
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        {{flash}}
                    </div>
                </div>
            </div>
        {% endif %}
    {% endfor %}
{% endfor %}

<div id="content">

    <div class="container">
        <div class="row">
            <div class="col-xl-4 col-lg-4 col-md-6 col-sm-6 col-12" id="listFriends">
                <ul class="list-group">
                    <li class="list-group-item"><h4><b>Friends</b></h4></li>
                    {% if friends is empty %}
                        <li class="list-group-item"> No friends yet. </li>
                    {% else %}
                        {% for friend in friends %}
                            <li class="list-group-item"> {{friend.friend.username}} </li>
                        {% endfor %}
                    {% endif %}
                </ul>
            </div>
            <div class="col-xl-4 col-lg-4 col-md-6 col-sm-6 col-12" id="listFriendRequests">
                <ul class="list-group">
                    <li class="list-group-item"><h4><b>Friend requests</b></h4></li>
                    {% if requests is empty %}
                        <li class="list-group-item"> No requests</li>
                    {% else %}
                        {% for request in requests %}
                            <li class="list-group-item" > 
                                <a href="{{ path('pub_profile', {username: request.fromUser.username}) }}"> {{request.fromUser.username}} </a> {{request.date|date("m/d/Y")}} 
                                <div style="float: right;">
                                    <form method="post" action="{{ path('friendship.reject', {id: request.fromUser.id}) }}" style="display: inline-block;">
                                        <input type="hidden" name="_method" value="CREATE">
                                        <input type="hidden" name="_token" value="{{ csrf_token('rejectFriendship' ~ request.fromUser.id) }}">
                                        <button class="btn">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="red" class="bi bi-x-circle" viewBox="0 0 16 16">
                                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                                <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                                            </svg>
                                        </button>
                                    </form>
                                    <form method="post" action="{{ path('friendship.add', {id: request.fromUser.id}) }}" style="display: inline-block;">
                                        <input type="hidden" name="_method" value="CREATE">
                                        <input type="hidden" name="_token" value="{{ csrf_token('addFriendship' ~ request.fromUser.id) }}">
                                        <button class="btn">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="green" class="bi bi-check-circle" viewBox="0 0 16 16">
                                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                                <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z"/>
                                            </svg>
                                        </button>
                                    </form>
                                </div>
                            </li>
                        {% endfor %}
                    {% endif %}
                </ul>
            </div>
            <div class="col-xl-4 col-lg-4 col-md-6 col-sm-6 col-12" id="listBans">
                <ul class="list-group">
                    <li class="list-group-item"><h4><b>Banned users</b></h4></li>
                    {% if friends is empty %}
                        <li class="list-group-item">No user banned</li>
                    {% else %}
                        {% for friend in friends %}
                            <li class="list-group-item"> {{friend.friend.username}} </li>
                        {% endfor %}
                    {% endif %}
                </ul>
            </div>
        </div>
    </div>
</div>

{% endblock %}