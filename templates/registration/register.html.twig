{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('css/register.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <div id="content">
        <div class="container">
            <h1>Register</h1>

            {{ form_start(registrationForm) }}
                <div id="usernameForm">
                    {{ form_row(registrationForm.username) }}
                </div>
                <div id="emailForm">
                    {{ form_row(registrationForm.email) }}
                </div>
                <div id="fullName" class="row">
                    <div id="lastNameForm" class="col col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6 col-xxl-6">
                        {{ form_row(registrationForm.lastName) }}
                    </div>
                    <div id="firstNameForm" class="col col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6 col-xxl-6">
                        {{ form_row(registrationForm.firstName) }}
                    </div>
                </div>
                <div id="passwordForm" class="row">
                    <div id="passwordForm1" class="col col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6 col-xxl-6">
                        {{ form_row(registrationForm.plainPassword.first) }}
                        
                    </div>
                    <div id="passwordForm2" class="col col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6 col-xxl-6">
                        {{ form_row(registrationForm.plainPassword.second) }}
                    </div>
                </div>
                <div id="formAvatar">
                    {{ form_row(registrationForm.avatar) }}
                </div>
                {{ form_row(registrationForm.agreeTerms) }}

                <button type="submit" class="btn">Register</button>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
